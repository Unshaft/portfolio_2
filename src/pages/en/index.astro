---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import DotNavigation from '../../components/DotNavigation.jsx';
import { getCategoryStyle } from '../../lib/constants';

const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(p => p.data.locale === 'en')
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---

<BaseLayout
  lang="en"
  altLangHref="/fr"
  title="Killian Perzo - Data Scientist | Agentic AI"
  description="Killian Perzo's Portfolio. Data Scientist specialized in Agentic AI. Discover my projects in LangChain, LangGraph, autonomous agents and multi-agent systems."
  scrollMode="snap"
>
  <DotNavigation client:only="react" />

  <!-- Section 1 : Hero -->
  <section id="welcome" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative overflow-hidden">
    <!-- Decorative gradient orbs -->
    <div class="absolute top-1/4 -left-32 w-64 h-64 bg-gold/10 rounded-full blur-3xl animate-glow-pulse"></div>
    <div class="absolute bottom-1/4 -right-32 w-80 h-80 bg-charcoal/10 dark:bg-gold/5 rounded-full blur-3xl animate-glow-pulse" style="animation-delay: 1.5s;"></div>

    <div class="relative z-10 text-center max-w-3xl">
      <div class="opacity-0 animate-slide-up">
        <p class="font-body text-sm sm:text-base font-medium tracking-widest uppercase text-gold mb-4 sm:mb-6">Data Scientist & Agentic AI</p>
      </div>

      <h1 class="opacity-0 animate-slide-up-delay-1 font-display text-4xl sm:text-5xl md:text-6xl font-extrabold mb-6 sm:mb-8 text-charcoal dark:text-white leading-[1.1] tracking-tight">
        Hi, I'm <span class="gold-accent">Killian</span>
      </h1>

      <p class="opacity-0 animate-slide-up-delay-2 font-body text-base sm:text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed mb-8 sm:mb-10">
        I build <strong class="text-charcoal dark:text-white font-semibold">intelligent autonomous agents</strong> and multi-agent systems that turn data into decisions.
      </p>

      <div class="opacity-0 animate-slide-up-delay-3 flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#projects" class="btn-primary btn-icon">
          <span>View my projects</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 14l-7 7m0 0l-7-7m7 7V3" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
        <a href="/en/about" class="btn-secondary">Learn more</a>
      </div>
    </div>
  </section>

  <!-- Section 2 : Projects -->
  <section id="projects" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative">
    <div class="text-center mb-8 sm:mb-12">
      <p class="font-body text-sm font-medium tracking-widest uppercase text-gold mb-2">Portfolio</p>
      <h2 class="section-title text-3xl sm:text-4xl">Recent Projects</h2>
    </div>

    <ul class="grid grid-cols-1 md:grid-cols-2 gap-5 sm:gap-8 w-full max-w-4xl">
      {projects.slice(0, 2).map(project => {
        const category = getCategoryStyle(project.data.category, 'en');
        return (
          <li class="group">
            <a href={`/en/projects/${project.slug}`} class="block h-full p-5 sm:p-7 rounded-2xl bg-white/60 dark:bg-gray-800/40 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm card-hover gold-border-glow">
              <div class="flex items-start justify-between gap-3 mb-3">
                <h3 class="font-display font-bold text-lg sm:text-xl text-charcoal dark:text-white group-hover:text-gold transition-colors duration-300">
                  {project.data.title}
                </h3>
                {category && (
                  <span class={`text-xs font-semibold px-2.5 py-1 rounded-full shrink-0 ${category.classes}`}>
                    {category.label}
                  </span>
                )}
              </div>
              <p class="font-body text-sm text-gray-600 dark:text-gray-400 line-clamp-3 leading-relaxed mb-4">{project.data.description}</p>
              <div class="flex items-center gap-2 text-sm font-body font-medium text-gold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span>View project</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </div>
            </a>
          </li>
        );
      })}
    </ul>

    <a href="/en/projects" class="mt-8 sm:mt-10 font-body font-medium text-gold hover:text-oldgold transition-colors flex items-center gap-2">
      All projects
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </a>
  </section>

  <!-- Section 3 : Skills -->
  <section id="skills" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative">
    <div class="text-center mb-8 sm:mb-12">
      <p class="font-body text-sm font-medium tracking-widest uppercase text-gold mb-2">Expertise</p>
      <h2 class="section-title text-3xl sm:text-4xl">Core Skills</h2>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 sm:gap-6 w-full max-w-2xl">
      {[
        { name: 'Python', desc: 'Primary language' },
        { name: 'LangChain', desc: 'LLM orchestration' },
        { name: 'LangGraph', desc: 'Multi-step agents' },
        { name: 'FastAPI', desc: 'High-perf APIs' },
        { name: 'ChromaDB', desc: 'Vector database' },
        { name: 'Claude AI', desc: 'Advanced LLM' },
      ].map((skill) => (
        <div class="group p-4 sm:p-5 rounded-2xl bg-white/60 dark:bg-gray-800/40 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm card-hover text-center">
          <p class="font-display font-bold text-base sm:text-lg text-charcoal dark:text-white group-hover:text-gold transition-colors">{skill.name}</p>
          <p class="font-body text-xs sm:text-sm text-gray-500 dark:text-gray-500 mt-1">{skill.desc}</p>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
