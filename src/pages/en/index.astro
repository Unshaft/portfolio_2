---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import DotNavigation from '../../components/DotNavigation.jsx';
import NetworkAnimation from '../../components/NetworkAnimation.astro';
import { getCategoryStyle } from '../../lib/constants';

const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(p => p.data.locale === 'en')
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---

<BaseLayout
  lang="en"
  altLangHref="/fr"
  title="Killian Perzo - Data Scientist | Agentic AI"
  description="Killian Perzo's Portfolio. Data Scientist specialized in Agentic AI. Discover my projects in LangChain, LangGraph, autonomous agents and multi-agent systems."
  scrollMode="snap"
>
  <DotNavigation client:only="react" />

  <!-- Section 1 : Hero -->
  <section id="welcome" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative overflow-hidden">
    <!-- Network node animation background -->
    <NetworkAnimation />
    <!-- Decorative gradient orbs -->
    <div class="absolute top-1/4 -left-32 w-64 h-64 bg-gold/10 rounded-full blur-3xl animate-glow-pulse"></div>
    <div class="absolute bottom-1/4 -right-32 w-80 h-80 bg-charcoal/10 dark:bg-gold/5 rounded-full blur-3xl animate-glow-pulse" style="animation-delay: 1.5s;"></div>

    <div class="relative z-10 text-center max-w-3xl">
      <div class="opacity-0 animate-slide-up">
        <p class="font-body text-sm sm:text-base font-medium tracking-widest uppercase text-gold mb-4 sm:mb-6">Data Scientist & Agentic AI</p>
      </div>

      <h1 class="opacity-0 animate-slide-up-delay-1 font-display text-4xl sm:text-5xl md:text-6xl font-extrabold mb-6 sm:mb-8 text-charcoal dark:text-white leading-[1.1] tracking-tight">
        <span class="gold-accent">Killian</span>
      </h1>

      <p class="opacity-0 animate-slide-up-delay-2 font-body text-base sm:text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed mb-8 sm:mb-10">
        I build <strong class="text-charcoal dark:text-white font-semibold">intelligent autonomous agents</strong> and multi-agent systems that turn data into decisions.
      </p>

      <div class="opacity-0 animate-slide-up-delay-3 flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#projects" class="btn-primary btn-icon">
          <span>View my projects</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 14l-7 7m0 0l-7-7m7 7V3" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
        <a href="/en/about" class="btn-secondary">Learn more</a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 animate-bounce text-gold/60">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 14l-7 7m0 0l-7-7" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </div>
  </section>

  <!-- Section 2 : Projects -->
  <section id="projects" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative">
    <div class="text-center mb-8 sm:mb-12">
      <p class="font-body text-sm font-medium tracking-widest uppercase text-gold mb-2">Portfolio</p>
      <h2 class="section-title text-3xl sm:text-4xl">Recent Projects</h2>
    </div>

    <ul class="grid grid-cols-1 md:grid-cols-2 gap-5 sm:gap-8 w-full max-w-4xl">
      {projects.slice(0, 2).map(project => {
        const category = getCategoryStyle(project.data.category, 'en');
        return (
          <li class="group">
            <a href={`/en/projects/${project.slug}`} class="block h-full p-5 sm:p-7 rounded-2xl bg-white/60 dark:bg-gray-800/60 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm card-hover gold-border-glow">
              <div class="flex items-start justify-between gap-3 mb-3">
                <h3 class="font-display font-bold text-lg sm:text-xl text-charcoal dark:text-white group-hover:text-gold transition-colors duration-300">
                  {project.data.title}
                </h3>
                {category && (
                  <span class={`text-xs font-semibold px-2.5 py-1 rounded-full shrink-0 ${category.classes}`}>
                    {category.label}
                  </span>
                )}
              </div>
              <p class="font-body text-sm text-gray-600 dark:text-gray-400 line-clamp-3 leading-relaxed mb-4">{project.data.description}</p>
              <div class="flex items-center gap-2 text-sm font-body font-medium text-gold opacity-50 group-hover:opacity-100 transition-opacity duration-300">
                <span>View project</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </div>
            </a>
          </li>
        );
      })}
    </ul>

    <a href="/en/projects" class="mt-8 sm:mt-10 font-body font-medium text-gold hover:text-oldgold transition-colors flex items-center gap-2">
      All projects
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </a>
  </section>

  <!-- Section 3 : Metrics -->
  <section id="metrics" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative">
    <div class="text-center mb-8 sm:mb-12">
      <p class="font-body text-sm font-medium tracking-widest uppercase text-gold mb-2">Impact</p>
      <h2 class="section-title text-3xl sm:text-4xl">By the Numbers</h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 w-full max-w-4xl">
      {[
        { value: '6+', label: 'AI Projects', icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M2 13l4 4L14 9m0 0l4 4 4-4" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
        { value: '3+', label: 'Autonomous Agents', icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a3.375 3.375 0 01-4.06.54L12 17.25l-.47.26a3.375 3.375 0 01-4.06-.54L5 14.5" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
        { value: '4', label: 'Certifications', icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
        { value: '3+', label: 'Years of Experience', icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
      ].map((metric) => (
        <div class="group p-5 sm:p-6 rounded-2xl bg-white/60 dark:bg-gray-800/60 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm text-center card-hover">
          <div class="text-gold mb-3 flex justify-center" set:html={metric.icon} />
          <p class="font-display text-4xl sm:text-5xl font-extrabold gold-accent mb-1">
            {metric.value}
          </p>
          <p class="font-body text-sm text-gray-600 dark:text-gray-400">{metric.label}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Section 4 : Skills -->
  <section id="skills" class="min-h-full snap-start flex flex-col justify-center items-center px-6 sm:px-8 py-16 sm:py-24 relative">
    <div class="text-center mb-8 sm:mb-12">
      <p class="font-body text-sm font-medium tracking-widest uppercase text-gold mb-2">Expertise</p>
      <h2 class="section-title text-3xl sm:text-4xl">Core Skills</h2>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 sm:gap-6 w-full max-w-2xl">
      {[
        { name: 'Python', desc: 'Primary language', icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-7 h-7"><path d="M12 2C6.48 2 6 4.02 6 5.5V8h6v1H5.5C3.02 9 2 11.02 2 13.5S3.52 18 5.5 18H8v-2.5C8 13.02 9.52 11 12 11h4c1.66 0 3-1.34 3-3V5.5C19 3.02 17.48 2 15.5 2H12zm-1.5 2a1 1 0 110 2 1 1 0 010-2z" stroke-linecap="round" stroke-linejoin="round"/><path d="M12 22c5.52 0 6-2.02 6-3.5V16h-6v-1h6.5c2.48 0 3.5-2.02 3.5-4.5S21.48 6 18.5 6H16v2.5c0 2.48-1.52 4.5-4 4.5h-4c-1.66 0-3 1.34-3 3v2.5C5 20.98 6.52 22 8.5 22H12zm1.5-2a1 1 0 110-2 1 1 0 010 2z" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
        { name: 'LangChain', desc: 'LLM orchestration', icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-7 h-7"><path d="M7 7a3 3 0 106 0 3 3 0 00-6 0zm4 3a3 3 0 106 0 3 3 0 00-6 0z" stroke-linecap="round" stroke-linejoin="round"/><path d="M15 10l-2 4m-2-4l-2 4" stroke-linecap="round"/><path d="M7 17a3 3 0 106 0 3 3 0 00-6 0zm4 0a3 3 0 106 0 3 3 0 00-6 0z" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
        { name: 'LangGraph', desc: 'Multi-step agents', icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-7 h-7"><circle cx="5" cy="6" r="2.5"/><circle cx="19" cy="6" r="2.5"/><circle cx="12" cy="18" r="2.5"/><path d="M7.5 7l3 8.5M16.5 7l-3 8.5M7.5 6h9" stroke-linecap="round"/></svg>` },
        { name: 'FastAPI', desc: 'High-perf APIs', icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-7 h-7"><path d="M13 2L4 14h7l-1 8 9-12h-7l1-8z" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
        { name: 'ChromaDB', desc: 'Vector database', icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-7 h-7"><ellipse cx="12" cy="6" rx="8" ry="3"/><path d="M4 6v6c0 1.66 3.58 3 8 3s8-1.34 8-3V6" stroke-linecap="round"/><path d="M4 12v6c0 1.66 3.58 3 8 3s8-1.34 8-3v-6" stroke-linecap="round"/></svg>` },
        { name: 'Claude AI', desc: 'Advanced LLM', icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-7 h-7"><path d="M12 2l2.4 7.2H22l-6 4.8 2.4 7.2L12 16.4 5.6 21.2 8 14 2 9.2h7.6L12 2z" stroke-linecap="round" stroke-linejoin="round"/></svg>` },
      ].map((skill) => (
        <div class="group p-3 sm:p-5 rounded-2xl bg-white/60 dark:bg-gray-800/60 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm card-hover text-center flex flex-col items-center gap-2">
          <div class="text-gold group-hover:scale-110 transition-[transform] duration-300 ease-[cubic-bezier(0.34,1.56,0.64,1)]" set:html={skill.icon} />
          <p class="font-display font-bold text-base sm:text-lg text-charcoal dark:text-white group-hover:text-gold transition-colors">{skill.name}</p>
          <p class="font-body text-xs sm:text-sm text-gray-600 dark:text-gray-400">{skill.desc}</p>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
