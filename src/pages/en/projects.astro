---
import { getCollection } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const lang = 'en';

const projects = (await getCollection('projects'))
  .filter((project) => project.data.locale === lang && !!project.slug)
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---

<BaseLayout
  lang="en"
  altLangHref="/fr/projects"
  title="Projects - Killian Perzo"
  description="Explore my projects in Data Analysis, Machine Learning, APIs and web development."
>
  <div x-data="{ filter: 'all' }">
    <div class="mb-10 sm:mb-14 px-2 sm:px-0">
      <p class="font-body text-sm font-medium tracking-widest uppercase text-gold mb-3">Portfolio</p>
      <h1 class="font-display text-3xl sm:text-4xl md:text-5xl font-extrabold text-charcoal dark:text-white leading-tight">
        My <span class="gold-accent">projects</span>
      </h1>
      <p class="font-body text-gray-600 dark:text-gray-400 mt-3 max-w-2xl">
        Autonomous agents, multi-agent systems, intelligent APIs and data-driven applications.
      </p>

      <!-- Category Filters -->
      <div class="flex flex-wrap gap-2 mt-6">
        <button
          @click="filter = 'all'"
          :class="filter === 'all' ? 'bg-charcoal dark:bg-white text-white dark:text-midnight' : 'bg-white/60 dark:bg-gray-800/40 text-gray-600 dark:text-gray-400 border border-gray-200/50 dark:border-gray-700/30'"
          class="px-4 py-1.5 rounded-full text-sm font-body font-medium transition-all duration-300 hover:scale-105 cursor-pointer"
        >
          All
        </button>
        <button
          @click="filter = 'perso'"
          :class="filter === 'perso' ? 'bg-emerald-600 text-white' : 'bg-white/60 dark:bg-gray-800/40 text-gray-600 dark:text-gray-400 border border-gray-200/50 dark:border-gray-700/30'"
          class="px-4 py-1.5 rounded-full text-sm font-body font-medium transition-all duration-300 hover:scale-105 cursor-pointer"
        >
          Personal
        </button>
        <button
          @click="filter = 'pro'"
          :class="filter === 'pro' ? 'bg-blue-600 text-white' : 'bg-white/60 dark:bg-gray-800/40 text-gray-600 dark:text-gray-400 border border-gray-200/50 dark:border-gray-700/30'"
          class="px-4 py-1.5 rounded-full text-sm font-body font-medium transition-all duration-300 hover:scale-105 cursor-pointer"
        >
          Pro
        </button>
        <button
          @click="filter = 'study'"
          :class="filter === 'study' ? 'bg-purple-600 text-white' : 'bg-white/60 dark:bg-gray-800/40 text-gray-600 dark:text-gray-400 border border-gray-200/50 dark:border-gray-700/30'"
          class="px-4 py-1.5 rounded-full text-sm font-body font-medium transition-all duration-300 hover:scale-105 cursor-pointer"
        >
          Study
        </button>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 sm:gap-8 px-2 sm:px-0">
      {projects.map((project) => (
        <a
          href={`/${lang}/projects/${project.slug}`}
          class="block group"
          x-show={`filter === 'all' || filter === '${project.data.category || 'all'}'`}
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
        >
          <ProjectCard project={project.data} lang={lang} />
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
