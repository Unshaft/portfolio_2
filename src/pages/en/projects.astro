---

<BaseLayout>
  <h1 class="text-5xl font-bold text-charcoal mb-8">My Projects</h1>



  <div class="grid md:grid-cols-2 gap-6">
    {projects.map((project) => (
      <a href={`/${lang}/projects/${project.slug}`} class="block group">
        <ProjectCard project={project.data} />
      </a>
    ))}
  </div>
</BaseLayout>
