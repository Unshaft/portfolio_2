---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection, getEntryBySlug } from 'astro:content';
import MarkdownRenderer from '../../../components/MarkdownRenderer.astro';
import { getCategoryStyle } from '../../../lib/constants';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: {
      lang: project.data.locale,
      slug: project.slug,
    },
  }));
}

const { lang, slug } = Astro.params;
const allProjects = await getCollection('projects');

const projectMeta = allProjects.find(
  (p) => p.slug === slug && p.data.locale === lang
);

if (!projectMeta) {
  throw new Error(`Projet "${slug}" introuvable pour la locale "${lang}".`);
}

const project = await getEntryBySlug('projects', slug);

if (!project) {
  throw new Error(`Fichier de contenu pour "${slug}" introuvable.`);
}

const { title, description, image, github, stack, translationOf, category } = project.data;
const categoryStyle = getCategoryStyle(category, lang);

const otherLang = lang === 'fr' ? 'en' : 'fr';
const altVersion = allProjects.find(
  (p) => p.data.translationOf === translationOf && p.data.locale === otherLang
);
const altLangHref = altVersion ? `/${otherLang}/projects/${altVersion.slug}` : null;

// Prev/Next navigation
const sameLangProjects = allProjects
  .filter(p => p.data.locale === lang && !!p.slug)
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));

const currentIndex = sameLangProjects.findIndex(p => p.slug === slug);
const prevProject = currentIndex > 0 ? sameLangProjects[currentIndex - 1] : null;
const nextProject = currentIndex < sameLangProjects.length - 1 ? sameLangProjects[currentIndex + 1] : null;
---

<BaseLayout lang={lang} altLangHref={altLangHref} title={`${title} | Killian Perzo`} description={description}>
  <section class="max-w-3xl mx-auto py-8 sm:py-12">
    <!-- Back link -->
    <a href={`/${lang}/projects`} class="inline-flex items-center gap-2 font-body text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gold transition-colors mb-8">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 12H5m0 0l7 7m-7-7l7-7" stroke-linecap="round" stroke-linejoin="round"/></svg>
      {lang === 'fr' ? 'Tous les projets' : 'All projects'}
    </a>

    <!-- Header -->
    <div class="mb-8 sm:mb-10">
      <div class="flex items-start justify-between gap-4 mb-4">
        <h1 class="font-display text-3xl sm:text-4xl md:text-5xl font-extrabold text-charcoal dark:text-white leading-tight">{title}</h1>
        {categoryStyle && (
          <span class={`text-xs font-semibold px-3 py-1.5 rounded-full shrink-0 mt-2 ${categoryStyle.classes}`}>
            {categoryStyle.label}
          </span>
        )}
      </div>
      {description && (
        <p class="font-body text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed">{description}</p>
      )}
    </div>

    <!-- Image -->
    {image && (
      <div class="relative overflow-hidden rounded-2xl mb-8 sm:mb-10">
        <img src={image} alt={title} loading="lazy" decoding="async" class="w-full object-cover" />
      </div>
    )}

    <!-- Stack -->
    {stack && stack.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-8 sm:mb-10">
        {stack.map((tech) => (
          <span class="bg-white/60 dark:bg-gray-800/40 border border-gray-200/50 dark:border-gray-700/30 text-charcoal dark:text-gray-300 text-sm font-body font-medium px-3 py-1.5 rounded-full">
            {tech}
          </span>
        ))}
      </div>
    )}

    <!-- GitHub link -->
    {github && (
      <div class="mb-8 sm:mb-10">
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary btn-icon inline-flex text-sm"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          <span>{lang === 'fr' ? 'Voir sur GitHub' : 'View on GitHub'}</span>
        </a>
      </div>
    )}

    <!-- Markdown content -->
    <div class="p-6 sm:p-8 rounded-2xl bg-white/60 dark:bg-gray-800/40 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm">
      <MarkdownRenderer body={project.body} />
    </div>

    <!-- Prev/Next Navigation -->
    <nav class="mt-12 sm:mt-16 grid grid-cols-1 sm:grid-cols-2 gap-4">
      {prevProject ? (
        <a href={`/${lang}/projects/${prevProject.slug}`} class="group p-5 rounded-2xl bg-white/60 dark:bg-gray-800/40 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm card-hover">
          <p class="font-body text-xs font-medium text-gray-500 dark:text-gray-500 uppercase tracking-wider mb-1">{lang === 'fr' ? 'Precedent' : 'Previous'}</p>
          <p class="font-display font-bold text-charcoal dark:text-white group-hover:text-gold transition-colors flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 12H5m0 0l7 7m-7-7l7-7" stroke-linecap="round" stroke-linejoin="round"/></svg>
            {prevProject.data.title}
          </p>
        </a>
      ) : <div></div>}
      {nextProject ? (
        <a href={`/${lang}/projects/${nextProject.slug}`} class="group p-5 rounded-2xl bg-white/60 dark:bg-gray-800/40 border border-gray-200/50 dark:border-gray-700/30 backdrop-blur-sm card-hover text-right">
          <p class="font-body text-xs font-medium text-gray-500 dark:text-gray-500 uppercase tracking-wider mb-1">{lang === 'fr' ? 'Suivant' : 'Next'}</p>
          <p class="font-display font-bold text-charcoal dark:text-white group-hover:text-gold transition-colors flex items-center justify-end gap-2">
            {nextProject.data.title}
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 12h14m0 0l-7-7m7 7l-7 7" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </p>
        </a>
      ) : <div></div>}
    </nav>
  </section>
</BaseLayout>
