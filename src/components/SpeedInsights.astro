// Note: SpeedInsights pour Astro - utiliser le script vanilla car le package officiel
// @vercel/speed-insights n'a pas de support natif Astro
---

<!-- Vercel Speed Insights - Script vanilla -->
<script is:inline>
  // Charger Speed Insights uniquement en production
  if (typeof window !== 'undefined' && window.location.hostname !== 'localhost') {
    const script = document.createElement('script');
    script.src = 'https://va.vercel-scripts.com/v1/speed-insights/script.js';
    script.defer = true;
    document.head.appendChild(script);
  }
</script>
