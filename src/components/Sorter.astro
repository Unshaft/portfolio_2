---
const { bindTo = 'filter', options = [], label = 'Trier par :', id = 'filter' } = Astro.props;
---

<section class="mb-8">
  <label for={id} class="mr-2 font-semibold">{label}</label>
  <select
    id={id}
    x-model={bindTo}
    class="border px-3 py-1 rounded"
  >
    {options.map(option => (
      <option value={option.value}>{option.label}</option>
    ))}
  </select>
</section>
